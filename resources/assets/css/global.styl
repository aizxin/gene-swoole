@import './index';

* {
    box-sizing: border-box;
}
html, body {
    width: 100%;
    height: 100%;
    min-height: 100%;
    background: #f4f5f6;
}
body {
    font-family: Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB, Microsoft YaHei, SimSun, sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #333;
    overflow-x: hidden;
    overflow-y: auto;
}
a {
    color: $appColor;
    text-decoration: none;
    outline: none;
}
// hover
.ishover {
    transition: background 0.3s;
    &:hover {
        background: rgba(0, 0, 0, 0.025);
    }
}
